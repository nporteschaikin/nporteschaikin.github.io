@import '_settings'
@import 'axis/animation'

global-reset()
base()

body, html
  height: 100%
  
body
  > div
    absolute: top 100% left right
    z-index: 1
    min-height: 100%
    background: red
  
header#header
  width=700px
  image-size=150px
  fixed: top 50% left 50%
  z-index: 0
  width: width
  height: image-size
  margin-top: -(image-size/2)
  margin-left: -(width/2)
  padding-left: image-size + (base-margin * 2)
  img
    rounded()
    absolute: top left
    animation: fadeInUp 1s linear
